@model IEnumerable<BarbeariaAgenda.Models.Agendamento>

@{
    ViewData["Title"] = "Agendamentos";
}

<h1>Agendamentos</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data e Hora</th>
            <th>Barbeiro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Barbeiro?.Nome</td>
            </tr>
        }
    </tbody>
</table>
